@model UsuarioModel
@{
    ViewData["Title"] = "Usuario Gestiona";
}

<div class="modal fade" id="addUser">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addUserLabel">Editar Usuario</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="Update">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                        <label asp-for="Nombre" class="col-form-label">Nombre:</label>
                        <input asp-for="Nombre" maxlength="200" type="text" class="form-control" value="@Model.Nombre" />
                        <span asp-validation-for="Nombre" for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaNacimiento" class="col-form-label">Fecha de nacimiento:</label>
                        <input type="date" asp-for="FechaNacimiento" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Genero" class="col-form-label">Genero:</label>
                        <select asp-for="Genero" class="form-control">
                            @if (Model.Genero == "F")
                            {
                                <option value="F" selected>Femenino</option>
                                <option value="M">Masculino</option>
                            }
                            else
                            {
                                <option value="F">Femenino</option>
                                <option value="M" selected>Masculino</option>
                            }
                            
                         </select>
                       
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" data-save="modal">Modificar</button>
            </div>

        </div>
    </div>
</div>
